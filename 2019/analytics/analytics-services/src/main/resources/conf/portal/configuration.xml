<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">
  <component>
    <type>org.exoplatform.addon.analytics.service.AnalyticsService</type>
  </component>

  <component>
    <type>org.exoplatform.addon.analytics.service.es.ElasticSearchStatisticDataProcessor</type>
  </component>

  <component>
    <type>org.exoplatform.addon.analytics.service.AnalyticsDataInjector</type>
    <init-params>
      <value-param>
        <name>enabled</name>
        <value>${exo.addon.analytics.data.injection.enabled:false}</value>
      </value-param>
      <value-param>
        <name>file.path</name>
        <value>${exo.addon.analytics.data.injection.path:}</value>
      </value-param>
    </init-params>
  </component>

  <component>
    <type>org.exoplatform.addon.analytics.rest.AnalyticsREST</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.search.index.IndexingOperationProcessor</target-component>
    <component-plugin>
      <name>AnalyticsIndexingServiceConnector</name>
      <set-method>addConnector</set-method>
      <type>org.exoplatform.addon.analytics.service.es.AnalyticsIndexingServiceConnector</type>
      <description>Analytics ElasticSearch Indexing Connector</description>
      <init-params>
        <properties-param>
          <name>constructor.params</name>
          <property name="index_alias" value="analytics_alias"/>
          <property name="index_previous" value=""/>
          <property name="index_current" value="analytics_v1"/>
          <property name="type" value="analytics"/>
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

</configuration>
