<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd http://www.exoplatform.org/xml/ns/kernel_1_2.xsd" xmlns="http://www.exoplatform.org/xml/ns/kernel_1_2.xsd">

  <component>
    <key>org.exoplatform.analytics.api.service.AnalyticsService</key>
    <type>org.exoplatform.analytics.es.service.ESAnalyticsService</type>
  </component>

  <component>
    <key>org.exoplatform.analytics.api.service.StatisticDataQueueService</key>
    <type>org.exoplatform.analytics.queue.service.DummyStatisticDataQueueService</type>
  </component>

  <component>
    <type>org.exoplatform.analytics.api.service.StatisticDataProcessorService</type>
  </component>

  <component>
    <type>org.exoplatform.analytics.rest.AnalyticsREST</type>
  </component>

  <external-component-plugins>
    <target-component>org.exoplatform.analytics.api.service.StatisticDataProcessorService</target-component>
    <component-plugin>
      <name>elasticsearch</name>
      <set-method>addProcessor</set-method>
      <type>org.exoplatform.analytics.es.processor.ElasticSearchStatisticDataProcessor</type>
      <description>ElasticSearch analytics data persister</description>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.commons.search.index.IndexingOperationProcessor</target-component>
    <component-plugin>
      <name>AnalyticsIndexingServiceConnector</name>
      <set-method>addConnector</set-method>
      <type>org.exoplatform.analytics.es.connector.AnalyticsIndexingServiceConnector</type>
      <description>Analytics ElasticSearch Indexing Connector</description>
      <init-params>
        <value-param>
          <name>mapping.file.path</name>
          <value>${exo.addon.analytics.es.mapping.path:jar:/analytics-es-mapping.json}</value>
        </value-param>
        <properties-param>
          <name>constructor.params</name>
          <property name="index_alias" value="analytics_alias"/>
          <property name="index_previous" value="analytics_v1"/>
          <property name="index_current" value="analytics_v1"/>
          <property name="type" value="analytics"/>
        </properties-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.services.resources.ResourceBundleService</target-component>
    <component-plugin>
      <name>Vuetify Sample Portlet Resource Bundle</name>
      <set-method>addResourceBundle</set-method>
      <type>org.exoplatform.services.resources.impl.BaseResourceBundlePlugin</type>
      <init-params>
        <values-param>
          <name>classpath.resources</name>
          <value>locale.addon.Analytics</value>
        </values-param>
        <values-param>
          <name>portal.resource.names</name>
          <value>locale.addon.Analytics</value>
        </values-param>
      </init-params>
    </component-plugin>
  </external-component-plugins>

  <!-- Statistic listeners -->
  <external-component-plugins>
    <target-component>org.exoplatform.social.core.space.spi.SpaceService</target-component>
    <component-plugin>
      <name>SpaceAnalyticsListener</name>
      <set-method>addSpaceListener</set-method>
      <type>org.exoplatform.analytics.listener.SpaceAnalyticsListener</type>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.services.listener.ListenerService</target-component>
    <component-plugin>
      <name>exo.core.security.ConversationRegistry.register</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.analytics.listener.LoginAnalyticsListener</type>
      <description>Listener for user login event statistics</description>
    </component-plugin>
    <component-plugin>
      <name>exo.core.security.ConversationRegistry.unregister</name>
      <set-method>addListener</set-method>
      <type>org.exoplatform.analytics.listener.LoginAnalyticsListener</type>
      <description>Listener for user logout event statistics</description>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.social.core.manager.ActivityManager</target-component>
    <component-plugin>
      <name>AnalyticsActivityListener</name>
      <set-method>addActivityEventListener</set-method>
      <type>org.exoplatform.analytics.listener.AnalyticsActivityListener</type>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.social.core.manager.IdentityManager</target-component>
    <component-plugin>
      <name>AnalyticsProfileListener</name>
      <set-method>registerProfileListener</set-method>
      <type>org.exoplatform.analytics.listener.AnalyticsProfileListener</type>
    </component-plugin>
  </external-component-plugins>

  <external-component-plugins>
    <target-component>org.exoplatform.social.core.manager.RelationshipManager</target-component>
    <component-plugin>
      <name>AnalyticsRelationshipListener</name>
      <set-method>addListenerPlugin</set-method>
      <type>org.exoplatform.analytics.listener.AnalyticsRelationshipListener</type>
    </component-plugin>
  </external-component-plugins>

</configuration>
